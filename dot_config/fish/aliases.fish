# General
alias grep "grep --color=auto"

# Top display in CPU decending order
alias top "top -o cpu"

# Bat instead of plain cat
alias cat "bat"
#... but occasionally want regular cat
alias ccat "/bin/cat"

alias o "open"
alias ql "qlmanage -p"
alias tailscale "/Applications/Tailscale.app/Contents/MacOS/Tailscale"

