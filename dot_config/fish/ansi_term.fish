#
# ansi_term.fish - General theming of Fish based on the
# terminal's ANSI colour settings.
#
# @author Chris Walker
#

set fish_color_error red --underline
set fish_color_comment black
set fish_color_quote green
set fish_color_match white
set fish_color_command black
set fish_color_param blue
set fish_color_autosuggestion blue
set fish_color_redirection black
set fish_color_end black
set fish_color_operator black
set fish_color_escape black

set fish_pager_color_description blue
set fish_pager_color_prefix black --bold
set fish_pager_color_completion blue

set fish_pager_color_selected_description brwhite --bold
set fish_pager_color_selected_prefix brcyan --bold
set fish_pager_color_selected_completion brwhite --bold
set fish_pager_color_selected_background --background=blue

set fish_pager_color_progress bryellow --bold
