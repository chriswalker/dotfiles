[user]
	email = thatamazingweb@gmail.com
	name = Chris Walker
[core]
	editor = kak
	attributesfile = $HOME/.config/git/.gitattributes
[url "git@github.com:"]
	insteadOf = https://github.com/
[column]
    ui = auto
[color "status"]
	header = black
	added = green
	changed = red
	untracked = blue
	branch = blue bold
[color "diff"]
	hunk = magenta
	func = blue
	frag = blue
	meta = black
    newMoved = magenta
    oldMoved = yellow
[color "decorate"]
    head = blue bold
[init]
	defaultBranch = main
[alias]
	lg = log --oneline --decorate --graph -n 15
	co = checkout
    br = branch
    st = status
[diff]
    algorithm = histogram
    colorMoved = plain
[tag]
    sort = -version:refname
[commit]
    verbose = true
